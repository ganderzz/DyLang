{
  "name": "dylang",
  "version": "1.0.0",
  "description": "Simplistic programming language",
  "main": "build/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --format=iife --global-name=dylang --outdir=build",
    "build:prod": "esbuild src/index.ts --minify --bundle --format=iife --global-name=dylang --outdir=build",
    "build:watch": "./node_modules/.bin/rollup -c --watch",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ganderzz/DyLang.git"
  },
  "author": "Dylan Paulus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ganderzz/DyLang/issues"
  },
  "homepage": "https://github.com/ganderzz/DyLang#readme",
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "esbuild": "^0.11.12",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4",
    "uglify-js": "^3.13.4"
  },
  "dependencies": {
    "commander": "^7.2.0",
    "tslib": "^2.2.0"
  },
  "jest": {
    "testMatch": [
      "**/?(*.)+(spec|test).(j|t)s?(x)"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "node_modules",
      "dist",
      "public",
      "webpack"
    ]
  }
}
